<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_margin="10dp"
        android:fontFamily="@font/product_sans_bold"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="23sp"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Delete all items anyway?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/dialog_delete_all_sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sure"
        android:textColor="?attr/colorOnSecondary"
        app:layout_constraintEnd_toStartOf="@id/dialog_delete_all_delete"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:layout_marginStart="20dp"
        android:id="@+id/dialog_delete_all_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textColor="?attr/colorOnSecondary"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toEndOf="@id/dialog_delete_all_sure"
        app:layout_constraintTop_toTopOf="@id/dialog_delete_all_sure" />

</androidx.constraintlayout.widget.ConstraintLayout>